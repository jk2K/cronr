{
  "name": "cronr",
  "version": "1.0.0",
  "description": "Time-based job scheduler",
  "main": "lib/normal/Cronr.cjs.js",
  "files": [
    "lib",
    "src",
    "CronrCounter"
  ],
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook-export": "build-storybook -c .storybook -o docs",
    "build": "rimraf lib && webpack --config scripts/webpack.config.js --display-chunks --display-error-details --hide-modules",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testMatch": [
      "**/test/*.(ts|tsx|js)"
    ]
  },
  "author": "youchao.liu",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.2",
    "@storybook/addon-console": "^1.0.0",
    "@storybook/addon-links": "^3.4.2",
    "@storybook/addon-notes": "^3.4.2",
    "@storybook/addons": "^3.4.2",
    "@storybook/react": "^3.4.2",
    "add-module-exports-webpack-plugin": "^0.1.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "husky": "^0.15.0-rc.13",
    "jest": "^21.2.1",
    "lint-staged": "^7.0.4",
    "parallel-webpack": "^2.3.0",
    "prettier": "^1.11.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "typescript": "^2.8.3",
    "webpack-cli": "^2.0.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryuever/cronr.git"
  },
  "dependencies": {
    "ts-loader": "^4.2.0",
    "webpack": "^4.6.0"
  },
  "bugs": {
    "url": "https://github.com/ryuever/cronr/issues"
  },
  "homepage": "https://github.com/ryuever/cronr#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "test"
  },
  "keywords": [
    "cron",
    "crontab",
    "millisecond",
    "job-scheduler",
    "client",
    "browser",
    "npm"
  ]
}
